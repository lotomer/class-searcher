          <outputDirectory>/resources</outputDirectory>
          <includes>
              <include>*.*</include>
          </includes>
      </fileSet>
      --> <fileSet>
        <directory>${project.build.directory}</directory>
        <outputDirectory>/</outputDirectory>
        <includes>
            <include>${project.artifactId}.jar</include>
        </includes>
    </fileSet>
  </fileSets>
  
